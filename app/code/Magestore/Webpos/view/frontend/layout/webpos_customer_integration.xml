<page layout='webpos' xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" >
    <body>
        <referenceBlock name="webpos-customer-list">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="customer-list" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="customer-view" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="webpos_customer_integration" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="os_store_credit" xsi:type="array">
                                                    <item name="component" xsi:type="string">Magestore_Webpos/js/view/customer/integration/store-credit</item>
                                                    <item name="displayArea" xsi:type="string">os_store_credit</item>
                                                </item>
                                                <item name="os_reward_points" xsi:type="array">
                                                    <item name="component" xsi:type="string">Magestore_Webpos/js/view/customer/integration/reward-points</item>
                                                    <item name="displayArea" xsi:type="string">os_reward_points</item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
